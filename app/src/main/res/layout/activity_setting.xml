<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" >

    <TextView
        android:id="@+id/txt_yejianmoshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="夜间模式"
        android:textSize="15dp" />

    <com.zf.view.UISwitchButton
        xmlns:switch="http://schemas.android.com/apk/res-auto"
        android:id="@+id/common_ui_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:checked="false"
        switch:bmHeight="3000dp"
        switch:bmWidth="45dp" />

    <com.atar.widgets.DownloadProgressButton
        android:id="@+id/down_btn_purple"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txt_yejianmoshi"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <com.atar.widgets.DownloadProgressButton
        android:id="@+id/down_btn_red"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/down_btn_purple"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <com.atar.widgets.DownloadProgressButton
        android:id="@+id/down_btn_green"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/down_btn_red"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

    <com.atar.widgets.DownloadProgressButton
        android:id="@+id/down_btn_blue"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/down_btn_green"
        android:layout_marginTop="20dp"
        android:textSize="16dp" />

</RelativeLayout>