<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_ad"
        android:maxLines="2"
        android:text="买股为收息，买债为升值"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/img_ad"
        android:lineSpacingMultiplier="1.2"
        android:lines="3"
        android:text="上周A股市出现前所未有的巨幅波动，千股跌停再到停的情况也是历史罕见。在连续两天报复股多韩国"
        android:textColor="#666666"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/img_ad"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/txt_content"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/img_user"
        android:gravity="center_vertical"
        android:text="一切皆有可能"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/img_reply"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/txt_content"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/txt_reply_num" />

    <TextView
        android:id="@+id/txt_reply_num"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/txt_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/img_topic_praise"
        android:text="2"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/img_topic_praise"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/txt_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/txt_topic_praise" />

    <TextView
        android:id="@+id/txt_topic_praise"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="6dp"
        android:text="2"
        android:textSize="10dp" />

</RelativeLayout>